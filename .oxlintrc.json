{
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "plugins": [
    "unicorn",
    "typescript",
    "oxc"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "typescript/no-explicit-any": "error",
    "unicorn/prevent-abbreviations": "off",
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "scripts/*.js"
      ],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": [
        "**/*.{ts,tsx}"
      ],
      "plugins": [
        "typescript"
      ],
      "rules": {
        "typescript/no-explicit-any": "warn"
      }
    }
  ]
}
